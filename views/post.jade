extends layout

block head
	title= "WebriQ - " + entry.title

block header
	h1= entry.title

block content
	article.box.post
		div.image.featured(style={"background-image": "url(" + entry.banner + ")"})
		p.lead= entry.shortdesc
		!= entry.body
		| <br>
		| <br>
		p <a href='//blog.webriq.com'> <i class="fa fa-long-arrow-left"></i> Go Back
		| <br>
		div#disqus_thread

	script(type='text/javascript').
